#%RAML 1.0
types:
  animal:
    type:array
    description: Entity that represent an animal
    items:
      properties:
        id:
          type: number
          description: identify of the animal
          required: true
        specie:
          type: enum
          description: animal specie
          required: true
        age:
          type: number
          description: animal age
          required: true
        weight:
          type: number
          description: animal's weight
          required: false
        size:
          type: enum
          description: animal's size
          required: true
        color:
          type: string
          description: animal color
          required: false
        type:
          type: enum
          description: animal type
          required: true